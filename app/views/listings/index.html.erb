<% if user_signed_in? %>
<% else %>
<div id="headerwrap">
    <div class="container">
      <div class="row centered">
        <div class="col-lg-8 col-lg-offset-2">
        <h1 class="title-shadow">Global marketplace for cars and bikes</h1><br>
        <!--<h2 class="title-shadow">Buy and sell <br><b>parts</b> and <b>accessories</b></h2>-->
        </div>
      </div><!-- row -->
    </div><!-- container -->
  </div><!-- headerwrap -->
<% end %>

<div class="container w">
<% if user_signed_in? %>
  <%= link_to new_listing_path, class: "btn btn-success", data: { no_turbolink: true } do %>
    <i class="glyphicon glyphicon-plus"></i> New Listing
  <% end %>
<% else %>
  <div id="lg">
    <div class="row centered">
      <h3>Monkey Wrench lets you sell any car or bike part and accessory for free.<br> In 60 seconds.</h3>
    </div>
  </div>
<% end %>

  <br>
  <br>

<h3 class="trending-items centered">TRENDING ITEMS</h3>
<br>
  <div class="center">
    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(listing.image.url), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= "Sold by #{listing.user.name}" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>